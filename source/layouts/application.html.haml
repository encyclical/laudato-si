!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "Laudato Si'"
    = stylesheet_link_tag "application"

  %body{class: page_classes}
    #social
      .shareLink
        Share...
      %a.twitterLink.postLink(href="#" target="_blank")
        = image_tag url_for("twitter.png"), alt: 'Tweet this link'
      %a.fbLink.postLink(href="#" target="_blank")
        = image_tag url_for("facebook.png"), alt: 'Share on Facebook'
      = image_tag url_for("link.png"), alt: 'Link', :class => 'linkLink postLink'
    = yield
    = javascript_include_tag "jquery"
    = javascript_include_tag "application"
